<div style="width:250px; margin:auto;">
<h1>New Recipe</h1>
<% form_for @recipe do |f| %>
<p>
<%= f.label :title %>
<br />
<%= f.text_field :title %>
</p>
<p>
<%= f.label :method %>
<br />
<%= f.text_area :method %>
</p>
<%= f.submit "Create Recipe" %> | <%= link_to "Cancel", recipes_path %>
<% end %>
</div>

